{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "KMADF1"
		},
		"SapTable1_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'SapTable1'"
		},
		"kmlinkedserviceblob1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'kmlinkedserviceblob1'"
		},
		"SapTable1_properties_typeProperties_clientId": {
			"type": "string",
			"defaultValue": "800"
		},
		"SapTable1_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "DIGITAL6"
		},
		"SapTable1_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "52.252.116.118"
		},
		"SapTable1_properties_typeProperties_systemNumber": {
			"type": "string",
			"defaultValue": "00"
		},
		"filetrigger1_properties_salesdatapipiline_parameters_filename": {
			"type": "string",
			"defaultValue": "hourlysales"
		},
		"filetrigger1_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/e7eeffbb-a3a2-46ab-aaf5-b356c47bb033/resourceGroups/KMRG/providers/Microsoft.Storage/storageAccounts/kmstoracc1"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "KMADF1_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"kmlinkedserviceblob1_connectionString": {
						"value": "[parameters('kmlinkedserviceblob1_connectionString')]"
					},
					"SapTable1_password": {
						"value": "[parameters('SapTable1_password')]"
					},
					"SapTable1_properties_typeProperties_clientId": {
						"value": "[parameters('SapTable1_properties_typeProperties_clientId')]"
					},
					"SapTable1_properties_typeProperties_userName": {
						"value": "[parameters('SapTable1_properties_typeProperties_userName')]"
					},
					"SapTable1_properties_typeProperties_server": {
						"value": "[parameters('SapTable1_properties_typeProperties_server')]"
					},
					"SapTable1_properties_typeProperties_systemNumber": {
						"value": "[parameters('SapTable1_properties_typeProperties_systemNumber')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "KMADF1_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"filetrigger1_properties_salesdatapipiline_parameters_filename": {
						"value": "[parameters('filetrigger1_properties_salesdatapipiline_parameters_filename')]"
					},
					"filetrigger1_properties_typeProperties_scope": {
						"value": "[parameters('filetrigger1_properties_typeProperties_scope')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'KMADF1_ArmTemplate_0')]"
			]
		}
	]
}